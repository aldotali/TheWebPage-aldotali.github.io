/*
 * Progam name : Lab06b
 * Description : returns the binary representation of a decimal
 * @author : Aldo Tali 2150009
 * Version: 1.0;
 * 
 * */

public class Lab06b
{
    public int decToBinary( int x)
    {
        
        if (x <= 1)
            return 1;
        else if ( x%2 == 0)
            return ( Integer.parseInt(decToBinary ( x/2) + "" + 0));
        else
            return ( Integer.parseInt(decToBinary ( x/2) + "" + 1));
    }
}